{
  "name": "api",
  "version": "1.0.0",
  "description": "A production-ready TypeScript backend API.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --exec ts-node src/server.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "node",
    "typescript",
    "express",
    "api",
    "backend"
  ],
  "author": "Aditya/Brainloop",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "fastify": "^5.4.0",
    "zod": "^3.25.73"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "nodemon": "^3.1.10",
    "prisma": "^6.11.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
